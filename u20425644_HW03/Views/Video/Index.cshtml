@using u20425644_HW03.Models
@model List<FileModel> 
@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>


<div class="container-fluid">
    <div class="row gallery">
        @foreach (FileModel file in Model)
        {
            <div class="col-sm-12 col-md-6 col-lg-4">
                <div class="card">
                    <div id="trailer" class="section d-flex justify-content-center embed-responsive embed-responsive-21by9">
                        <video class="embed-responsive-item" controls autoplay loop muted>
                            <source src="@Url.Content("~/App_Data/Media/Videos/" + file.FileName)" type="video/mp4">
                            Your browser does not support the video tag.
                        </video>
                    </div>
                    <div class="card-body">
                        <h5 class="card-title">@file.FileName<</h5>

                        <button type="button" class="btn btn-success">
                            @Html.ActionLink("Download", "DownloadFile",
                                new { fileName = file.FileName })
                        </button>

                        <button type="button" class="btn-danger">
                            @Html.ActionLink("DELETE", "DeleteFile",
                            new { fileName = file.FileName },
                            new { onclick = "return confirm('Are you sure you wish to delete this?');" })
                        </button>


                    </div>
                </div>
            </div>
        }
    </div>
</div>

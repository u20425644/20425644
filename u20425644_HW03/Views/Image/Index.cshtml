@using u20425644_HW03.Models
@model List<FileModel>

@{
    ViewBag.Title = "Index";
}



<script type="text/javascript"
        src="/scripts/jquery.fancybox.pack.js"></script>

<link href="~/Content/jquery.fancybox.css" rel="stylesheet" />

<h2>Index</h2>



<div class="container-fluid">
    <div class="row gallery">
        @foreach (FileModel file in Model)
        {
            <div class="col-sm-12 col-md-6 col-lg-4">
                <div class="card">
                    <a data-fancybox="gallery" href="~/App_Data/Media/Images/+ @file.FileName">
                        <img style="width: 18rem;" class="card-img-top" src="@Url.Content("~/App_Data/Media/Images/" + file.FileName)" alt="Upload Image">
                    </a>
                    <div class="card-body">
                        <h5 class="card-title">@file.FileName<</h5>

                        <button type="button" class="btn btn-success">
                            @Html.ActionLink("Download", "DownloadFile",
                                new { fileName = file.FileName })
                        </button>

                        <button type="button" class="btn-danger">
                            @Html.ActionLink("DELETE", "DeleteFile",
                            new { fileName = file.FileName },
                            new { onclick = "return confirm('Are you sure you wish to delete this?');" })
                        </button>


                    </div>
                </div>
            </div>
        }
    </div>
</div>

<script>
    $(document).ready(function ($) {
        $(".gallery a").fancybox();
    });
</script>
